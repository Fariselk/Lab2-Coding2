<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.12" fx:controller="com.example.demo.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
    </padding>
    <GridPane>
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="ALWAYS" minWidth="10.0" prefWidth="100.0"/>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0"/>
        </columnConstraints>
        <rowConstraints>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
            <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES"/>
        </rowConstraints>
        <TextFlow accessibleText="Welcome" prefHeight="30.0" prefWidth="420.0" textAlignment="CENTER"
                  GridPane.columnIndex="1" GridPane.halignment="CENTER">
            <Label fx:id="welcomeText" text="Welcome!" style="-fx-font-size: 24px;"/>
        </TextFlow>
        <Label text="Username:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="name" GridPane.rowIndex="1" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"/>
        <Label text="Password:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="password" GridPane.rowIndex="2" GridPane.columnIndex="1" GridPane.columnSpan="2" GridPane.hgrow="ALWAYS"/>
        <Button text="Sign In" fx:id="button" GridPane.rowIndex="3" GridPane.columnIndex="2" GridPane.halignment="RIGHT" />
    </GridPane>
</VBox>